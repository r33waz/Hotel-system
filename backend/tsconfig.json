{
  "compilerOptions": {
    "target": "ES6",

    "module": "CommonJS",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "strict": true,

    "skipLibCheck": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["src/**/*", "dist"]
}
